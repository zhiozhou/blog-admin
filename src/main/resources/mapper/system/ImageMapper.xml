<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.zhou.module.system.image.domain.dao.ImageDAO">

    <insert id="save" parameterType="ImagePO">
        INSERT INTO system_image
        (
            url,
            thumbnail_url,
            remark,
            create_id,
            gmt_create,
            gmt_modified
        ) VALUES (
            #{url},
            #{thumbnailUrl},
            #{remark},
            #{createId},
            NOW(),
            NOW()
        )
    </insert>

    <delete id="remove" parameterType="ImageDTO">
        delete from system_image where id = #{id}
    </delete>


    <select id="get" parameterType="ImageDTO" resultType="ImagePO">
        SELECT
            id,
            url,
            thumbnail_url,
            remark,
            create_id,
            gmt_create,
            gmt_modified
        FROM
            system_image
        where id =#{id}
    </select>

    <select id="list" parameterType="ImageDTO" resultType="ImagePO">
        SELECT
            id,
            url,
            thumbnail_url,
            remark,
            create_id,
            gmt_create,
            gmt_modified
        FROM
            system_image
        ORDER BY id DESC
    </select>

</mapper>
