<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.zhou.module.system.role.domain.dao.RoleDAO">

    <resultMap id="POMap" type="RolePO">
        <id column="id" property="id"/>
        <result column="key" property="key"/>
        <result column="name" property="name"/>
        <result column="state" property="state"/>
        <result column="remark" property="remark"/>
        <result column="create_id" property="createId"/>
        <result column="modified_id" property="modifiedId"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="is_deleted" property="deleted"/>
    </resultMap>

    <resultMap id="VOMap" type="RoleVO">
        <id column="id" property="id"/>
        <result column="key" property="key"/>
        <result column="name" property="name"/>
        <result column="state" property="state"/>
        <result column="remark" property="remark"/>
        <collection property="menus"  ofType="MenuVO">
            <id column="menu_id" property="id"/>
            <result column="menu_parent_id" property="parentId"/>
            <result column="menu_name" property="name" />
        </collection>
    </resultMap>

    <resultMap id="TableVOMap" type="RoleTableVO">
        <id column="id" property="id"/>
        <result column="key" property="key"/>
        <result column="name" property="name"/>
        <result column="state" property="state"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <sql id="POSql">
        SELECT
            id,
            `key`,
            `name`,
            state,
            remark,
            create_id,
            modified_id,
            gmt_create,
            gmt_modified,
            is_deleted
        FROM system_role
    </sql>

    <insert id="save" parameterType="RolePO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO system_role(
            `key`,
            name,
            state,
            remark,
            create_id,
            gmt_create,
            is_deleted
        )VALUES(
            #{key},
            #{name},
            #{state},
            #{remark},
            #{createId},
	        NOW(),
            0
        )
    </insert>

    <delete id="removeList" parameterType="RoleDTO">
        update system_role set is_deleted = 1
        where is_deleted = 0 and id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="RolePO">
        update system_role
        <set>
            <if test="key != null and key != ''">`key` = #{key},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="state != null ">state = #{state},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            modified_id = #{modifiedId},
            gmt_modified = NOW()
        </set>
        where id = #{id}
    </update>

    <select id="get" parameterType="RoleQuery" resultMap="POMap">
        <include refid="POSql"/>
        WHERE id = #{id}
    </select>

    <select id="getVO" parameterType="RoleDTO" resultMap="VOMap">
        SELECT
            role.id,
            role.`key`,
            role.`name`,
            role.state,
            role.remark,
            menu.id AS menu_id,
            menu.parent_id AS menu_parent_id,
            menu.NAME AS menu_name
        FROM system_role AS role
        LEFT JOIN system_role_menu AS role_menu ON role.id = role_menu.role_id
        LEFT JOIN system_menu AS menu ON role_menu.menu_id = menu.id
        WHERE role.id = #{id}
    </select>

    <select id="list" parameterType="RoleQuery" resultMap="POMap">
        <include refid="POSql"/>
        <where>
            <if test="key != null and key != ''"> AND `key` = #{key}</if>
            <if test="name != null and name != ''"> AND `name` = #{name}</if>
            <if test="state != null"> AND state = #{state}</if>
            <if test="remark != null and remark != ''"> AND remark = #{remark}</if>
            <if test="createId != null"> AND create_id = #{createId}</if>
        </where>
    </select>

    <select id="listTableVO" parameterType="RoleQuery" resultMap="TableVOMap">
        SELECT
            id,
            `key`,
            name,
            state,
            remark
        FROM system_role
        <where>
            <if test="state != null">and state = #{state} </if>
            <if test="nameLike != null and nameLike != ''">and `name` LIKE CONCAT('%',#{nameLike},'%')</if>
        </where>
    </select>

    <select id="count" parameterType="RoleQuery" resultType="integer">
        SELECT
        COUNT( 0 )
        FROM
        system_role
        <where>
            <if test="ridId != null ">and id != #{ridId}</if>
            <if test="name != null and name != ''">and `name` = #{name}</if>
            <if test="key != null and key != ''">and `key` = #{key}</if>
        </where>
    </select>

    <insert id="relateMenu" parameterType="RoleMenuPO">
        INSERT INTO system_role_menu ( role_id, menu_id )
        VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            ( #{item.roleId},#{item.menuId} )
        </foreach>
    </insert>

    <delete id="unRelateMenu" parameterType="Integer">
        delete from system_role_menu where role_id = #{id}
    </delete>

    <select id="countUser" parameterType="RoleQuery" resultType="int">
        SELECT
            COUNT(0)
        FROM system_user_role
        <where>
            <if test="id != null ">and role_id != #{id}</if>
            <if test="ids != null">and role_id IN
                <foreach collection="ids" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>

    <select id="keySet" parameterType="Integer" resultType="String">
        SELECT
            `key`
        FROM system_role
        LEFT JOIN system_user_role ON system_role.id = system_user_role.role_id AND system_role.is_deleted = 0
        WHERE state = 0 AND system_user_role.user_id = #{value}
    </select>

    <select id="idSet" parameterType="integer" resultType="integer">
        SELECT
            id
        FROM system_role
        LEFT JOIN system_user_role ON system_role.id = system_user_role.role_id AND system_role.is_deleted = 0
        WHERE state = 0 AND system_user_role.user_id = #{value}
    </select>

</mapper>
