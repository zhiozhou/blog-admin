<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.zhou.module.access.accessLog.domain.dao.AccessLogDAO">

    <resultMap id="accessLogMap" type="AccessLogPO">
        <id column="id" property="id"/>
        <result column="host" property="host"/>
        <result column="os" property="os"/>
        <result column="browser" property="browser"/>
        <result column="api" property="api"/>
        <result column="gmt_create" property="gmtCreate"/>
        <association property="visitor" javaType="VisitorPO">
            <result column="visitor_id" property="id"/>
            <result column="nickname" property="nickname" />
        </association>
    </resultMap>

    <select id="list" parameterType="AccessLogDTO" resultMap="accessLogMap">
        SELECT
            zhousb_access_log.id,
            visitor_id,
            nickname,
            `host`,
            os,
            browser,
            api,
            zhousb_access_log.gmt_create
        FROM
            zhousb_access_log
            LEFT JOIN zhousb_visitor ON zhousb_access_log.visitor_id = zhousb_visitor.id
        <where>
            <if test="visitor != null  and visitor.id != null "> and visitor_id = #{visitor.id}</if>
            <if test="apiLike != null  and apiLike != '' "> and api LIKE CONCAT('%',#{apiLike},'%') </if>
        </where>
        ORDER BY id DESC
    </select>

    <select id="count" parameterType="AccessLogDTO" resultType="Integer">
        SELECT
            count(0)
        FROM
        zhousb_access_log
        <where>
            <if test="visitor != null  and visitor.id != null "> and visitor_id = #{visitor.id}</if>
            <if test="api != null  and api != '' "> and api = #{api}</if>
        </where>
    </select>

</mapper>
